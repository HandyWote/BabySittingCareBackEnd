# 早护通后端环境配置文件示例
# 复制此文件为 .env 并填入实际值

# ===========================================
# 基础配置
# ===========================================

# Flask应用密钥（用于会话加密等）
# 生产环境请使用强随机字符串
SECRET_KEY=your-secret-key-here

# JWT密钥（用于Token签名）
# 生产环境请使用强随机字符串
JWT_SECRET_KEY=your-jwt-secret-key

# Flask运行环境
# development: 开发环境（调试模式）
# production: 生产环境
FLASK_ENV=development

# ===========================================
# 数据库配置
# ===========================================

# 数据库连接URL
# SQLite（开发环境）: sqlite:///database.db
# PostgreSQL（生产环境）: postgresql://username:password@localhost:5432/database_name
# MySQL: mysql://username:password@localhost:3306/database_name
DATABASE_URL=sqlite:///database.db

# PostgreSQL配置（如果使用PostgreSQL）
POSTGRES_DB=babysitting
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# 微信小程序配置
# ===========================================

# 微信小程序AppID
# 从微信公众平台获取
WECHAT_APP_ID=your-wechat-app-id

# 微信小程序AppSecret
# 从微信公众平台获取，请妥善保管
WECHAT_APP_SECRET=your-wechat-app-secret

# ===========================================
# 服务器配置
# ===========================================

# 服务器主机地址
# 开发环境: 127.0.0.1 或 localhost
# 生产环境: 0.0.0.0（监听所有接口）
HOST=0.0.0.0

# 服务器端口
PORT=5010

# ===========================================
# 跨域配置
# ===========================================

# 允许跨域的源地址
# 开发环境可以使用 * 允许所有源
# 生产环境应该指定具体的域名
# 多个域名用逗号分隔
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ===========================================
# 文件上传配置
# ===========================================

# 文件上传目录
UPLOAD_FOLDER=uploads

# 最大文件大小（字节）
# 16MB = 16 * 1024 * 1024
MAX_CONTENT_LENGTH=16777216

# 允许的文件扩展名
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,mov,avi

# ===========================================
# 日志配置
# ===========================================

# 日志级别
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/app.log

# ===========================================
# 缓存配置
# ===========================================

# Redis配置（如果使用Redis缓存）
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# 邮件配置（如果需要发送邮件）
# ===========================================

# SMTP服务器配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ===========================================
# 第三方服务配置
# ===========================================

# 阿里云OSS配置（如果使用对象存储）
ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
ALIYUN_OSS_BUCKET=your-bucket-name

# 腾讯云COS配置
TENCENT_SECRET_ID=your-secret-id
TENCENT_SECRET_KEY=your-secret-key
TENCENT_COS_REGION=ap-beijing
TENCENT_COS_BUCKET=your-bucket-name

# ===========================================
# 安全配置
# ===========================================

# API限流配置
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# IP白名单（管理员接口）
ADMIN_IP_WHITELIST=127.0.0.1,::1

# ===========================================
# 监控配置
# ===========================================

# 是否启用性能监控
MONITORING_ENABLED=False

# Sentry错误监控（如果使用）
SENTRY_DSN=your-sentry-dsn

# ===========================================
# 开发工具配置
# ===========================================

# 是否启用调试模式
DEBUG=True

# 是否启用自动重载
RELOAD=True

# 是否显示SQL查询
SQLALCHEMY_ECHO=False